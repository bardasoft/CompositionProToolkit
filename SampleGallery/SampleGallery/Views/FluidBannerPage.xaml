<Page
    x:Class="SampleGallery.Views.FluidBannerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CompositionProToolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SampleGallery.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#373737">
        <controls:FluidBanner
            x:Name="Banner"
            Margin="50"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            Stretch="Fill" />
        <controls:ProgressRing3d x:Name="LoadingIndicator" HorizontalAlignment="Stretch" Margin="100"  NodeColor="Maroon" SyncAccentColor="False"></controls:ProgressRing3d>
    </Grid>
</Page>



